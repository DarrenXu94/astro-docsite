---
const { active, allTabs, component } = Astro.props;

const capitalizeFirstLetter = (string) => {
  return string.charAt(0).toUpperCase() + string.slice(1);
};
---

<ul>
  {
    allTabs.map((section) => (
      <li class:list={["tab", { tabSelected: active == section }]}>
        <a href={`/en/${component.attributes.Page.title}-${section}`}>
          {capitalizeFirstLetter(section)}
        </a>
      </li>
    ))
  }
</ul>

<style>
  ul {
    display: inline-block;
    border-bottom: 1px solid #dae0e7;
    list-style-type: none;
    padding: 12px 12px 0;
    width: 100%;
  }

  a {
    text-decoration: none;
    color: var(--theme-text);
  }

  .tab {
    float: left;
    height: 45px;
    margin: 0 8px -1px 0;
    border: 1px solid #dae0e7;
    background: var(--theme-bg-offset);
    border-radius: 8px 8px 0 0;
    overflow: hidden;
  }

  .tab a {
    display: inline-block;
  }

  .tab a:first-child {
    padding: 16px;
    white-space: nowrap;
  }

  .tab:hover {
    background: var(--theme-bg-hover);
  }

  .tabSelected {
    height: 45px;
    border-bottom: none;
    background: var(--theme-bg);
  }
</style>
